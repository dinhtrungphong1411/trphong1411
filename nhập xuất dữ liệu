ds can bo 
public class CanBo {
    String hoTen;
    float hsl;
    String diaChi;

    public CanBo(String hoTen, float hsl, String diaChi) {
        this.hoTen = hoTen;
        this.hsl = hsl;
        this.diaChi = diaChi;
    }

    public CanBo() {
    }
     
    Scanner sc=new Scanner(System.in);
    public String getHoTen() {
        return hoTen;
    }

    public void setHoTen(String hoTen) {
        this.hoTen = hoTen;
    }

    public float getHsl() {
        return hsl;
    }

    public void setHsl(float hsl) {
        this.hsl = hsl;
    }

    public String getDiaChi() {
        return diaChi;
    }

    public void setDiaChi(String diaChi) {
        this.diaChi = diaChi;
    }

    public void Nhap(){
        System.out.print("Nhập tên: ");
        setHoTen(sc.nextLine());
        System.out.print("Nhập hệ số lương: ");
        setHsl(sc.nextFloat());
        System.out.print("Nhập địa chỉ: ");
        sc.nextLine();
        setDiaChi(sc.nextLine());
    }
    
    @Override
    public String toString(){
    return "Họ tên: "+getHoTen()+"\tHệ số lương: "+getHsl()+"\tĐịa chỉ: "+getDiaChi();
    }
}
